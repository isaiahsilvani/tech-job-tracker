<%- include('../partials/header') %>
<main>
    <div id="reply-body">
        <div id='reply-message-text'>
        <h3>Message Details</h3>
        <h4><%= message.title %></h4>
        <h5>
            Posted on <%= message.createdAt.toLocaleString() %> - <%= message.postedBy %>
            <img id="avatar" width="30" src="<%= message.avatar %>" alt="">
        </h5>

        <% message.replies.forEach(reply => { %>
        <h6>
            <img id="avatar" width="25" src="<%= reply.avatar %>" alt=""> - <%= reply.postedBy %> - <%= reply.message %>
                <span id='reply-date'><%= reply.createdAt.toLocaleString() %></span>
                
            </h6>
        <% }) %>
        </div>
    </div>

    <form action="/messages/<%= message._id %>" method="POST">
    <div class="form-group">
        <input 
                type="text"
                class="form-control"
                aria-describedby="message"
                name="message"
                placeholder="Enter reply..."
            >
    </div>
    <button type="submit" class="btn btn-primary">Reply</button>
    </form>
</main>

<%- include('../partials/footer') %>